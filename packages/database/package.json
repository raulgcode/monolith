{
  "name": "@monolith/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:create": "dotenv -e ../../.env -- prisma migrate dev --name",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:setup": "dotenv -e ../../.env -- prisma db push && dotenv -e ../../.env -- tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.3.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
